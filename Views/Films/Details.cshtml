@model EFM_MVC.Models.Film

<h2>Details</h2>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Réalisateur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Réalisateur)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateDeSortie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateDeSortie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Synopsis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Synopsis)
        </dd>
        <dt class="col-sm-2">
            Affiche
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Affiche" alt="Affiche du film" width="520" height="520" />
        </dd>
        <dt class="col-sm-2">
            Bande-Annonce
        </dt>
        <dd class="col-sm-10">
            <video autoplay controller width="520" height="440" controls>
                <source src="~/images/@Model.BandeAnnonce" type="video/mp4">
                Votre navigateur ne supporte pas la vidéo.
            </video>
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
